{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "jsx": "preserve",
    "baseUrl": "./src",
    "strictNullChecks": true,
    "paths": {
      "*": [
        "shared/*",
        "client/*",
        "server/*",
        "*"
      ]
    }
  },
  "include": [
    "src"
  ]
}
