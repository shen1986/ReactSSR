 {
    "restartable": "rs",
    "watch": ["src"],
    "ext": "ts",
    "ignore": [
      ".git",
      "node_modules/**/node_modules",
      ".tslintrc",
      "client",
      "build",
      "config",
      ".vscode"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "verbose": true,
    "exec": "cross-env NODE_ENV=development ts-node --project tsconfig.server.json src/server/server.ts"
  }
